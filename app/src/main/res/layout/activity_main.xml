<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.hs.emirim.sbb9918.myfirstapplication.MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="center">

    <ImageView
        android:id="@+id/top_iv"
        android:layout_marginTop="20dp"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:src="@drawable/top"
        android:layout_gravity="center"
        android:clickable="true"
        />
    <TextView
        android:gravity="center"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:text="상의"
        android:textSize="20dp"/>
    <ImageView
        android:id="@+id/bottom_iv"
        android:layout_marginTop="20dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/pants"
        android:layout_gravity="center"
        android:clickable="true"
        />
    <TextView
        android:gravity="center"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="하의"
        android:layout_weight="0.30" />
    <ImageView
        android:id="@+id/under_iv"
        android:layout_marginTop="20dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/bra"
        android:layout_gravity="center"
        android:clickable="true"
        />
    <TextView
        android:gravity="center"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="유후~"
        android:layout_weight="0.30" />

    <ImageView
        android:id="@+id/shoes_iv"
        android:layout_marginTop="20dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/shoes"
        android:layout_gravity="center"
        android:clickable="true"
        />
    <TextView
        android:gravity="center"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="신발"
        android:layout_weight="0.30" />



</LinearLayout>

